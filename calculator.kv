
CalculatorForm:
<CalculatorForm>:
    text_input: input
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: input
            font_size: 25
            text: "0"
            size_hint: 1,None
            readonly: True
            multiline: False

        GridLayout:
            rows: 5
            cols: 4

            Button:
                text: "1"
                on_press: root.pressed(self.text)
            Button:
                text: "2"
                on_press: root.pressed(self.text)
            Button:
                text: "3"
                on_press: root.pressed(self.text)
            Button:
                text: "+"
                on_press: root.pressed(self.text)
            Button:
                text: "4"
                on_press: root.pressed(self.text)
            Button:
                text: "5"
                on_press: root.pressed(self.text)
            Button:
                text: "6"
                on_press: root.pressed(self.text)
            Button:
                text: "-"
                on_press: root.pressed(self.text)
            Button:
                text: "7"
                on_press: root.pressed(self.text)
            Button:
                text: "8"
                on_press: root.pressed(self.text)
            Button:
                text: "9"
                on_press: root.pressed(self.text)
            Button:
                text: "*"
                on_press: root.pressed(self.text)
            Button:
                text: "."
                on_press: root.pressed(self.text)
            Button:
                text: "0"
                on_press: root.pressed(self.text)
            Button:
                text: "<-"
                on_press: root.pressed(self.text)
            Button:
                text: "/"
                on_press: root.pressed(self.text)
            Button:
                text: "("
                on_press: root.pressed(self.text)
            Button:
                text: ")"
                on_press: root.pressed(self.text)
            Button:
                text: "C"
                on_press: root.pressed(self.text)
            Button:
                text: "="
                on_press: root.pressed(self.text)